@page
@model udemy_web_project_01.Pages.BookList.UpsertModel



<h2 class="text-info">@(Model.Book.id!=0? "Update":"Create New") new book</h2>
<br />

<div class="border container" style="padding:30px">
    <form method="post">
        @*validation summary*@
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
         
        @if (Model.Book.id != 0)
        { <input type="hidden" asp-for="Book.id" /> }

        @*name column*@
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Name" class="form-control" />
            </div>
            <span asp-validation-for="Book.Name" class="text-danger"></span>
        </div>

        @*author column*@
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" class="form-control" />
            </div>
            <span asp-validation-for="Book.Author" class="text-danger"></span>
        </div>

        @*isbn column*@
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ISBN" class="form-control" />
            </div>
            <span asp-validation-for="Book.ISBN" class="text-danger"></span>
        </div>

        @*submit or back to list control*@
        <div class="form-group row">
            <div class="col-3 offset-4">
                <button type="submit" class="btn btn-primary form-control">@(Model.Book.id !=0? "Update":"Create")</button>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
